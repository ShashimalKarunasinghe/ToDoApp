<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".ui.detail.TaskDetailFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <!-- Task Title -->
        <TextView
            android:id="@+id/textTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:paddingTop="40dp"
            android:text="Task Title"
            android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
            android:textColor="@color/text_primary" />

        <!-- Task Description -->
        <TextView
            android:id="@+id/textDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:paddingTop="20dp"
            android:text="Task description here"
            android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
            android:textColor="@color/text_secondary" />

        <!-- Due Date -->
        <TextView
            android:id="@+id/textDateTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="Due: 12 March 2025"
            android:textAppearance="@style/TextAppearance.Material3.BodySmall"
            android:textColor="@color/text_primary" />

        <!-- Priority -->
        <TextView
            android:id="@+id/textPriority"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="12dp"
            android:text="Priority: Medium"
            android:textAppearance="@style/TextAppearance.Material3.BodySmall"
            android:textColor="@color/text_primary" />

        <!-- Progress Label -->
        <TextView
            android:id="@+id/textProgressLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:text="Progress"
            android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
            android:textColor="@color/text_secondary" />

        <!-- Progress Slider -->
        <com.google.android.material.slider.Slider
            android:id="@+id/sliderProgress"
            android:layout_width="match_parent"
            android:layout_height="83dp"
            android:stepSize="5"
            android:value="0"
            android:valueFrom="0"
            android:valueTo="100" />

        <!-- Update Progress Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnUpdateProgress"
            style="@style/Widget.Material3.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:text="Update"
            android:visibility="gone" />

        <!-- Completed Checkbox -->

        <!-- Buttons Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnEdit"
                style="@style/Widget.Material3.Button.Icon"
                android:layout_width="120dp"
                android:layout_height="64dp"
                android:layout_marginEnd="8dp"
                android:backgroundTint="#503B75"
                android:contentDescription="Edit task"
                android:text="@string/btn_edit"
                app:cornerRadius="12dp"
                app:icon="@drawable/ic_edit"
                app:iconTint="@android:color/white" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnDelete"
                style="@style/Widget.Material3.Button.Icon"
                android:layout_width="120dp"
                android:layout_height="64dp"
                android:backgroundTint="#503B75"
                android:contentDescription="Delete task"
                android:text="@string/btn_delete"
                app:cornerRadius="12dp"
                app:icon="@drawable/ic_delete"
                app:iconTint="@android:color/white" />


        </LinearLayout>
    </LinearLayout>
</ScrollView>
